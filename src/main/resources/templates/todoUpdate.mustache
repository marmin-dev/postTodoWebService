{{>layout/header}}
<h1 style="text-align:center "><a href="/" style="text-decoration:none,color:black">TodoPostWeb</a></h1>
<nav class="navbar navbar-expand-lg bg-light">
    <div class="container px-4">
        <a class="navbar-brand" href="/">내게시물</a>
        <a class="navbar-brand" href="/post/all">전체게시물</a>
        <a class="navbar-brand" href="/post/create">게시물작성</a>
        <a class="navbar-brand" href="/todo/create">할일추가</a>
    </div>
</nav>
<div>
    <h2>할일 수정하기</h2>
</div>
<div>
    {{#todo}}
        <div class="input-group mb-3">
            <input type="text" class="form-control" aria-label="Sizing example input"
                   aria-describedby="inputGroup-sizing-default" id="id"
                   value={{id}} readonly>
        </div>
        <div class="input-group mb-3">
            <input type="text" class="form-control" aria-label="Sizing example input"
                   aria-describedby="inputGroup-sizing-default" id="todoContent"
                   value="{{content}}">
        </div>
    {{/todo}}
</div>
<div class="row">
    <button type="button" class="btn btn-primary" id="btn-todoUpdate">할일 수정</button>
    <button type="button" class="btn btn-danger" id="btn-todoDelete">삭제하기</button>
    <a href="/" role="button" class="btn btn-secondary">취소</a>
</div>
{{>layout/footer}}
