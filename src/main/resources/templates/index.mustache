{{>layout/header}}
<div>
 <br>
    <!-- 목록 출력 영역 -->
    <table class="table table-horizontal table-bordered">
        <thead class="thead-strong">
        <tr>
            <th class="col-1">할일끝!</th>
            <th class="col-7">할일</th>
            <th class="col-1">수정</th>
        </tr>
        </thead>
        <tbody id="tbody">
        {{#todo}}
            <tr>
                <td><input class="form-check-input" type="checkbox" value="다했니?" id="flexCheckDefault"></td>
                <td>{{content}}</td>
                <td><a type="button" class="btn btn-success" href="/todo/update/{{id}}">글수정</a></td>
            </tr>
        {{/todo}}
        </tbody>
    </table>
</div>
<h2>최근 게시물 보기</h2>
{{#post}}
<div class="card">
  <div class="card-body">
    <h5 class="card-title"><a href = "/post/find/{{id}}">{{title}}</a></h5>
    <h6 class="class=card-subtitle mb-2 text-muted">{{author}}</h6>
    <p class="card-text">{{content}}</p>
  </div>
</div>
{{/post}}
{{>layout/footer}}
