{{>layout/header}}
<h1 style="text-align:center "><a href="/" style="text-decoration:none,color:black">TodoPostWeb</a></h1>
<nav class="navbar navbar-expand-lg bg-light">
    <div class="container px-4">
        <a class="navbar-brand" href="/">내게시물</a>
        <a class="navbar-brand" href="/allposts">전체게시물</a>
        <a class="navbar-brand" href="/">게시물작성</a>
        <a class="navbar-brand" href="/">할일추가</a>
    </div>
</nav>
<div>
 <br>
    <!-- 목록 출력 영역 -->
    <table class="table table-horizontal table-bordered">
        <thead class="thead-strong">
        <tr>
            <th style="width:100px">할일끝!</th>
            <th>할일</th>
        </tr>
        </thead>
        <tbody id="tbody">
        {{#todo}}
            <tr>
                <td><input class="form-check-input" type="checkbox" value="다했니?" id="flexCheckDefault"></td>
                <td>{{content}}</td>
            </tr>
        {{/todo}}
        </tbody>
    </table>
</div>
{{#post}}
<div class="card">
  <div class="card-body">
    <h5 class="card-title">{{title}}</h5>
    <h6 class="class=card-subtitle mb-2 text-muted">{{author}}</h6>
    <p class="card-text">{{content}}</p>
  </div>
</div>
{{/post}}
{{>layout/footer}}
